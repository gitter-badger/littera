{
    "name": "littera/littera",
    "description": "CMS based on Laravel 5.",
    "keywords": [
        "cms",
        "laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nikoay Denisenko",
            "email": "mail@pektop.net",
            "homepage": "http://pektop.net/"
        }
    ],
    "require": {
        "laravel/framework": "5.0.*",
        "intervention/image": "2.1.*",
        "intervention/imagecache": "2.1.*",
        "doctrine/dbal": "2.5.*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "~2.0",
        "barryvdh/laravel-ide-helper": "~2.0",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
