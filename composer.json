{
    "name": "littera/littera",
    "description": "CMS based on Laravel 5.",
    "keywords": ["cms", "laravel"],
    "license": "MIT",
    "homepage": "http://getlittera.com/",
    "support": {
        "issues": "https://github.com/littera/littera/issues",
        "source": "https://github.com/littera/littera"
    },
    "authors": [
        {
            "name": "Nikoay Denisenko",
            "email": "mail@pektop.net"
        }
    ],
    "require": {
        "illuminate/html": "5.0.*",
        "intervention/image": "2.2.*",
        "intervention/imagecache": "2.2.*",
        "laravel/framework": "5.0.*",
        "laravel/socialite": "2.0.*"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "~2.0",
        "barryvdh/laravel-ide-helper": "~2.0",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "rap2hpoutre/laravel-log-viewer": "~0.2"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Http/helpers.php"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
